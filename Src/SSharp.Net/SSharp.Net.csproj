<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug_NET4' OR '$(Configuration)' == 'Release_NET4' ">
    <TargetFramework>net48</TargetFramework>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' OR '$(Configuration)' == 'Release' ">
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>

    <Version>4.0.1</Version>
    <Authors>Petro Protsyk</Authors>
    <PackageId>SSharp.Net</PackageId>
    <Configurations>Debug;Release;Debug_NET4;Release_NET4</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <None Include="bin\Release\netcoreapp3.1\SSharp.Net.dll" Pack="true" PackagePath="lib\netcoreapp3.1\SSharp.Net.dll" />
    <None Include="bin\Release_NET4\net48\SSharp.Net.dll" Pack="true" PackagePath="lib\net48\SSharp.Net.dll" />
    <Content Include="build\SSharp.Net.targets" Pack="true" PackagePath="build\SSharp.Net.targets" />
  </ItemGroup>

  <ItemGroup Condition=" '$(Configuration)' == 'Debug_NET4' OR '$(Configuration)' == 'Release_NET4' ">
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="RuntimeConfig.xml" />
    <EmbeddedResource Include="RuntimeConfig.xml" />

    <None Update="ConfigGenerator.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>ConfigGenerator.cs</LastGenOutput>
    </None>

    <Compile Update="ConfigGenerator.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ConfigGenerator.tt</DependentUpon>
    </Compile>

    <Compile Include="..\AssemblyVersionInfo.cs" Link="Properties\AssemblyVersionInfo.cs" />
  </ItemGroup>

  <!-- T4 Templates -->
  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

</Project>
